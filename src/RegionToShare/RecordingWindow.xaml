<Window x:Class="WpfApp1.RecordingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="None" Background="Transparent" AllowsTransparency="True" Topmost="True"
        Title="Region to Share - Source Region" Height="450" Width="800">
  <Border BorderThickness="4" BorderBrush="Green">
    <Grid x:Name="ClientArea">
      <Button Width="16" Height="16" 
              HorizontalAlignment="Right" 
              VerticalAlignment="Top" 
              Click="Button_Click">
        <Path Width="12" Height="12" 
              Data="M2,2 L10,10 M2,10 L10,2" 
              Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" 
              StrokeThickness="1" />
      </Button>
    </Grid>
  </Border>
</Window>
